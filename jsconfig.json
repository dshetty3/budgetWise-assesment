{
  "compilerOptions": {
    "target": "esnext",                   
    "module": "esnext",                    
    "baseUrl": "./",                      
    "moduleResolution": "node",           
    "paths": {
      "@/*": ["src/*"]                    
    },
    "lib": ["esnext", "dom"],             
    "strict": true,                       
    "jsx": "preserve",                   
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"                            
  ]
}
